<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Verifone">

    <!--Set Env Variable: -->
    <!--QA-->
    <!--DEV-->
    <parameter name="env" value="DEV"/>
    <parameter name="getVersions" value="false"/>
    <parameter name="isLinuxMachine" value="${isLinux}"/>

    <!--Set Portal Variable: -->
    <!--CPPortal-->
    <!--CGPortal-->
    <!--EOAdmin-->
    <parameter name="portal" value="VFMPPortal"/>

    <test name="Automation Tests">
        <!--Set Browser Variable:-->
        <!--CHROME-->
        <!--FF-->
        <!--EDGE-->
        <!--IE-->
        <parameter name="browserType" value="chrome"/>

        <classes>
            <!--Verifone MP -->
            <class name="com.verifone.tests.mpAngularTests.applications.AppCataloguePageTest"/>
            <class name="com.verifone.tests.mpAngularTests.applications.AppDetailsPageTest"/>
        </classes>
    </test>
</suite>