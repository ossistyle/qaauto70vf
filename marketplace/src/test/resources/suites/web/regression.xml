<?xml version = "1.0" encoding = "UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="Verifone Marketplace">

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="true"/>

    <test name="Login tests">
        <classes>
            <class name="test.web.LoginPageTest"/>
        </classes>
    </test>

    <test name="Applications tests">
        <classes>
            <class name="test.web.applications.AppCataloguePageTest"/>
            <class name="test.web.applications.AppDetailsPageTest"/>
        </classes>
    </test>

    <test name="Settings tests">
        <classes>
            <class name="test.web.settings.UsersPageTest"/>
        </classes>
    </test>
</suite>